@page
@model CinemaProject.Pages.Admin.Capacities.DeleteModel
@{
}

<h2>Delete Capacity</h2>

<form method="post">
    <input type="hidden" asp-for="Cap.Id" />
    <div class="form-group">
        <label asp-for="Cap.Capacity"></label>
        <input asp-for="Cap.Capacity" class="form-control" />
        <span asp-validation-for="Cap.Capacity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
