@page
@model CinemaProject.Pages.Admin.Capacities.CreateModel
@{
}

<h2>Create New Capacity</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Cap.Capacity"></label> <!-- Change this if your property is different -->
        <input asp-for="Cap.Capacity" class="form-control" type="number" min="1" required /> <!-- Ensure it's an integer -->
        <span asp-validation-for="Cap.Capacity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
