@page
@model CinemaProject.Pages.Admin.Capacity.EditModel
@{
}

<h2>Edit Capacity</h2>

<form method="post">
    <input type="hidden" asp-for="Cap.Id" />
    <div class="form-group">
        <label asp-for="Cap.Capacity"></label>
        <input asp-for="Cap.Capacity" class="form-control" />
        <span asp-validation-for="Cap.Capacity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
