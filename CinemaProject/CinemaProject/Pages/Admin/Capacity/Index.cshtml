@page
@model CinemaProject.Pages.Admin.Capacity.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Capacity</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create new Capacity size
            </a>
        </div>
    </div>
</div><br /><br /><br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Capacity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.cap)
        {
            <tr>
                <td width="50%">@obj.Id</td>
                <td width="50%">@obj.Capacity</td>
                <td> <a asp-page="Edit" asp-route-id="@obj.Id">Edit</a> </td>
                <td> <a asp-page="Delete" asp-route-id="@obj.Id">Delete</a> </td>
            </tr>
        }
    </tbody>
</table>