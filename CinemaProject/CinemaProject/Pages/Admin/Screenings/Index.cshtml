@page
@model CinemaProject.Pages.Admin.Screenings.IndexModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">General Screening</h3>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create new Screening
            </a>
        </div>
    </div>
</div>


<br />
<br />
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Screening Date & Time</th>
            <th>Screen Number</th>
            <th>Film Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Screenings)
        {
            <tr>
                <td width="50%">@obj.Time</td>
                <td width="40%">@obj.ScreenID</td>
                <td width="30%">@obj.Film.Title</td>
                <td> <a asp-page="Edit" asp-route-id="@obj.Id">Edit</a> </td>
                <td> <a asp-page="Delete" asp-route-id="@obj.Id">Delete </a> </td>
            </tr>
        }
    </tbody>
</table>