@page
@model CinemaProject.Pages.Admin.Screenings.CreateModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create new Screening</h2>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.Time"></label>
            <input asp-for="@Model.Screening.Time" class="form-control" />
            <span asp-validation-for="@Model.Screening.Time" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.ScreenID"></label>
            <select asp-for="@Model.Screening.ScreenID" asp-items="@Model.ScreenList" class="form-select">
                <option disabled selected="selected Screen ---"></option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screening.FilmID"></label>
            <select asp-for="@Model.Screening.FilmID" asp-items="@Model.FilmList" class="form-select">
                <option disabled selected="selected Film ---"></option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}