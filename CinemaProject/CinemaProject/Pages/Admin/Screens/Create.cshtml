@page
@model CinemaProject.Pages.Admin.Screens.CreateModel
@{
}


<form method="post">
    @* <input hidden asp-for="Screen.Id"/> *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create New Screen</h2>
        </div>

        @* Set Screen ID (Read-only) *@
        <div class="mb-3">
            <label asp-for="@Model.Screen.Id"></label>
            <input asp-for="@Model.Screen.Id" class="form-control" readonly /> <!-- Read-only -->
        </div>

        @* Select Screen Columns *@
        <div class="mb-3">
            <label asp-for="@Model.Screen.Columns"></label>
            <select asp-for="@Model.Screen.Columns" class="form-control">
                <option value="12">12</option>
                <option value="20">20</option>
                <option value="30">30</option>
            </select>
            <span asp-validation-for="@Model.Screen.Columns" class="text-danger"></span>
        </div>

        @* Select Screen Rows *@
        <div class="mb-3">
            <label asp-for="@Model.Screen.Rows"></label>
            <select asp-for="@Model.Screen.Rows" class="form-control">
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
            </select>
            <span asp-validation-for="@Model.Screen.Rows" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>