@page
@model CinemaProject.Pages.Admin.Screens.DeleteModel
@{
}
<form method="post">
    <input hidden asp-for="Screen.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Screen</h2>
        </div>
       <div class="mb-3">
            <label asp-for="@Model.Screen.Id"></label>
            <input asp-for="@Model.Screen.Id" class="form-control" readonly />
        </div>

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</form>
@section Scripts {
    @{
      <partial name="_validationScriptsPartial" />
    }
}