@page
@model CinemaProject.Pages.Admin.Screens.EditModel
@{
}
<form method="post">
    <input hidden asp-for="Screen.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Screen</h2>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Screen.Id"></label>
            <input asp-for="@Model.Screen.Id" class="form-control" readonly /> <!-- Read-only -->
        </div>

        <div class="mb-3">
            <label>Capacity</label>
            <input type="number" class="form-control" value="120" disabled />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</form>

@section Scripts {
    @{
                <partial name="_validationScriptsPartial" />
    }
}